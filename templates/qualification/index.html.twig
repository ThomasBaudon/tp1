{% extends 'base.html.twig' %}

{% block title %}Liste des qualifications{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">

             <h1 class="text-uppercase text-center mt-3 mb-3">Liste des qualifications</h1>

                <table class="table">
                    <thead>
                        <th># Qualif</th>
                        <th>Code</th>
                        <th>Libellé</th>
                        <th>Actions</th>
                    </thead>

                    <tbody>
                        {% for qualification in qualifications %}

                        <tr class"vertical-align">
                            <td>{{ qualification.id }}</td>
                            <td>{{ qualification.code }}</td>
                            <td>{{ qualification.libelle }}</td>
                            <td>
                                <a href="#" class="btn btn-dark">Détail</a>
                                <a href="#" class="btn btn-warning">Modifier</a>
                                <a href="#" class="btn btn-danger">Supprimer</a>
                            </td>

                        </tr>

                        {% else %}

                            <tr>
                                <td colspan="6">Aucune qualification trouvée</td>
                            </tr>
                            
                        {% endfor %}
                    </tbody>
                </table>

                <a href="#" class="btn btn-dark text-uppercase w-100">Ajouter une qualification</a>

            </div>
        </div>
    </div>

{% endblock %}
